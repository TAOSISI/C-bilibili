<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF00FFEC"/>
                <GradientStop Color="#FF0B9FAE" Offset="1"/>
                <GradientStop Color="#FF098491" Offset="0.977"/>
                <GradientStop Color="#FFFCFCFC" Offset="0.962"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="button" Content="Click Me" HorizontalAlignment="Left" Margin="237,130,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textBoxShowHello" HorizontalAlignment="Left" Height="17" Margin="162,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198"/>

    </Grid>
</Window>
